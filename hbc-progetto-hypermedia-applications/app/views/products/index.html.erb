<h1><%= @title %> </h1>

<div class="gridList">
  <% @products.each do |product| %>
       <div class="gridBox">
       <%= product.name %>
          <%= link_to product_path(product,:title=>@title) do%>
              <%= image_tag("/products/#{product.image_url}") %>
          <% end %>
          </div>
  <% end  %>
</div>


