<h1><%=@service.name%>: products</h1>
<br>
<br>
<div class="gridList">
  <% @products.each do |product| %>
      <div class="gridBox">
        <%= product.name %>
        <%= link_to product_path(product) do%>
            <%= image_tag("/products/#{product.image_url}") %>
        <% end %>
      </div>
  <% end  %>
</div>




<div id="backLink">

  <div id="imageBack">
    <%= link_to service_path(@service, :list=>true) do%>
        <%= image_tag("/back.png") %>
    <% end %>
  </div>

  <div id="textBack">
    Back to "<%=@service.name%>"
  </div>

</div>