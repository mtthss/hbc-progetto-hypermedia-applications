<div>
<h1> <%= @event.name %> </h1>
</div>

<div class="mainEventImg">
<%= image_tag("/events/#{@event.image_url}") %>
</div>

<br>

<div>
<h3 class="tit"> Description </h3>
<p> <%= @event.description %> </p>
</div>

<div>
<h3 class="tit"> Location </h3>
<p> <%= @event.location %> </p>
</div>

<div>
  <h3> Exposed products </h3>
  <%= link_to "Look at #{@event.name} exposed products", exposed_products_event_path(@event) %>
</div>

<div>
<h3 class="tit"> Photo-gallery </h3>
  <div class="gridList">
    <% @images.each do |image| %>
        <div class="gridBox" class="flex">
           <%= image_tag("/events/#{image.image_url}") %>
        </div>
    <% end  %>
  </div>
</div>


<div id="backLink">

  <div>
  <%= link_to :back do%>
    <%= image_tag("/back.png") %>
  <% end %>
  </div>

  <div>
    Back
  </div>

</div>