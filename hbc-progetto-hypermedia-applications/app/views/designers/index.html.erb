<h1><%= @title %> designers</h1>

<br>
<div class="gridList">
  <% @designers.each do |designer| %>
      <div class="gridBox">
          &nbsp; <%= designer.name %>
        <% if(@title=="Top") %>
            <%= link_to designer_path(designer, :top=>true) do%>
                <%= image_tag("/designers/#{designer.image_url}") %>
            <% end %>
        <% else %>
            <%= link_to designer_path(designer) do%>
                <%= image_tag("/designers/#{designer.image_url}") %>
            <% end %>
        <% end %>
      </div>
  <% end  %>
</div>

