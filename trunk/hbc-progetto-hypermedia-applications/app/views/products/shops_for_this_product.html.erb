<h1>Shop for <%= @product.name%></h1>
<br><br>

<% @shops.each do |shop| %>
    <%= link_to shop.name, shop_path(shop.id) %> <br>
    <%= shop.address %>  <br>
    <br>
<% end %>



<div id="backLink">

  <div id="imageBack">
    <%= link_to :back do%>
        <%= image_tag("/back.png") %>
    <% end %>
  </div>

  <div id="textBack">
    Back to "<%=@product.name%>" product
  </div>

</div>