<h1>Shop for <%= @product.name%></h1>
<br><br>

<% @shops.each do |shop| %>
    <%= link_to shop.name, shop_path(shop.id) %> (<%= shop.shop_type %>) <br>
    <%= shop.address %>  <br>
    <br>
<% end %>



<div id="backLink">

<% if(@title!=nil) %>
  <div id="imageBack">
    <%= link_to product_path(@product, :title=>@title) do%>
        <%= image_tag("/back.png") %>
    <% end %>
  </div>
<% elsif(@designer_id!=nil) %>
  <div id="imageBack">
      <%= link_to product_path(@product, :designer_id=>@designer_id) do%>
         <%= image_tag("/back.png") %>
      <% end %>
  </div>
<% elsif(@product_type_id!=nil) %>
  <div id="imageBack">
    <%= link_to product_path(@product, :product_type_id=>@product_type_id) do%>
        <%= image_tag("/back.png") %>
    <% end %>
  </div>
<% else %>
   <div id="imageBack">
     <%= link_to product_path(@product) do%>
         <%= image_tag("/back.png") %>
     <% end %>
   </div>
<% end %>

  <div id="textBack">
    Back to "<%=@product.name%>" product
  </div>

</div>